.container
	@media screen and (min-width: 541px)
		display table

.col
	@media screen and (max-width: 540px)
		display table
		margin 0 auto 20px

	@media screen and (min-width: 541px)
		display table-cell
		vertical-align top
		width 1%

.arrow
	margin 0 auto

	@media screen and (max-width: 540px)
		sprite $arrow-270

	@media screen and (min-width: 541px)
		sprite $arrow

	&-caption
		color #579eda
		font-size 14px
		text-align center

		@media screen and (min-width: 541px)
			margin-top 84px

.list
	margin-bottom 20px
	list-style inside

	&_type_files
		margin-left 10px
		margin-bottom 0
		list-style none

	&__item
		margin-left 10px
		line-height 24px

		&_type
			&_folder
				&:before
					display inline-block
					vertical-align middle
					margin-right 6px
					content ''
					sprite $folder

			&_file
				&:before
					display inline-block
					vertical-align middle
					margin-right 6px
					content ''
					sprite $document-code

.delo
	background url(../images/delo.png) no-repeat

	height 120px
	font-size 1px
	margin-left: 36.5%
	margin-top: 65px




