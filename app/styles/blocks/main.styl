.container
	@media screen and (min-width: 541px)
		display table

.col
	@media screen and (max-width: 540px)
		display table
		margin 0 auto 20px

	@media screen and (min-width: 541px)
		display table-cell
		vertical-align top
		width 1%

.arrow
	margin 0 auto

	@media screen and (max-width: 540px)
		sprite $arrow-270

	@media screen and (min-width: 541px)
		sprite $arrow

	&-caption
		color #579eda
		font-size 14px
		text-align center

		@media screen and (min-width: 541px)
			margin-top 84px
.case
	background url(../images/delo.png) no-repeat
	height 120px
	font-size 1px
	margin-left: 36.5%
	margin-top: 65px

.list
	margin-bottom 20px
	list-style none


.item0
	margin-top -2px


.item1
	margin-top auto

.line-container
	float: right;

.underline
	background url(/assets/images/line.png) repeat-x
	content: " "
	display: block
	height: 4px
	width: 400px
